{
  "manifest_version": 3,
  "name": "Create React App Sample",
  "short_name": "React App",
  "version": "1.0",
  "description": "A sample Chrome extension",
  "icons": {
    "16": "favicon.ico",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/logo.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "logo192.png",
      "128": "logo512.png"
    }
  },
  "permissions": [
    "activeTab"
  ]
}
